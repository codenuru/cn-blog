{
  "name": "cn-blog",
  "version": "1.0.0-alpha.5",
  "description": "Fullstack Blog Application with Next.js",
  "homepage": "https://www.github.com/codenuru",
  "author": "enes esen",
  "license": "MIT",
  "engines": {
    "node": ">=12.0.0"
  },
  "keywords": [
    "React",
    "NextJS",
    "GraphQL",
    "Nexus",
    "Prisma"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/codenuru/cn-blog"
  },
  "bugs": {
    "url": "https://github.com/codenuru/cn-blog/issues"
  },
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "next start",
    "generate": "yarn -s generate:prisma && yarn -s generate:nexus && yarn -s generate:codegen",
    "generate:prisma": "prisma generate",
    "generate:nexus": "ts-node --transpile-only -P nexus.tsconfig.json api/schema",
    "generate:codegen": "graphql-codegen --config codegen.yml",
    "migrate:save": "prisma migrate save --experimental",
    "migrate:up": "prisma migrate up --experimental",
    "prisma:up": "prisma db push --preview-feature",
    "introspect": "prisma introspect",
    "analyze": "cross-env ANALYZE=true next build"
  },
  "dependencies": {
    "@apollo/client": "^3.2.5",
    "@material-ui/core": "^4.11.0",
    "@material-ui/icons": "^4.9.1",
    "@nexus/schema": "^0.18.0",
    "@prisma/client": "2.10.0",
    "apollo-server-micro": "^2.19.0",
    "bcrypt": "^5.0.0",
    "clsx": "^1.1.1",
    "formik": "^2.2.5",
    "graphql": "^15.4.0",
    "graphql-middleware": "^4.0.2",
    "graphql-scalars": "^1.4.1",
    "graphql-shield": "^7.4.0",
    "i18next": "^19.8.3",
    "jsonwebtoken": "^8.5.1",
    "jwt-decode": "2.2.0",
    "micro-cors": "^0.1.1",
    "next": "^10.0.1",
    "next-i18next": "^7.0.1",
    "nexus-plugin-prisma": "^0.23.1",
    "nookies": "^2.5.0",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "validator": "^13.1.17",
    "winston": "^3.3.3",
    "yup": "^0.29.3"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^1.19.1",
    "@graphql-codegen/typescript": "^1.17.11",
    "@graphql-codegen/typescript-operations": "^1.17.9",
    "@next/bundle-analyzer": "^10.0.1",
    "@prisma/cli": "^2.10.0",
    "@types/micro-cors": "^0.1.1",
    "@types/react": "^16.9.56",
    "@types/yup": "^0.29.9",
    "@typescript-eslint/eslint-plugin": "^4.7.0",
    "@typescript-eslint/parser": "^4.7.0",
    "cross-env": "^7.0.2",
    "eslint": "^7.13.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "prettier": "^2.1.2",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.5"
  },
  "optionalDependencies": {
    "husky": "^4.3.0",
    "pretty-quick": "3.1.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --pattern \"**/*.*(ts|tsx|graphql)\" --staged"
    }
  }
}

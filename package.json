{
  "name": "cn-blog",
  "version": "1.0.0-alpha.1",
  "description": "Fullstack Blog Application with Next.js",
  "homepage": "https://www.github.com/codenuru",
  "engines": {
    "node": ">=12.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/codenuru/cn-blog"
  },
  "bugs": {
    "url": "https://github.com/codenuru/cn-blog/issues"
  },
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "next start",
    "generate": "yarn -s generate:prisma && yarn -s generate:nexus && yarn -s generate:codegen",
    "generate:prisma": "prisma generate",
    "generate:nexus": "ts-node --transpile-only -P nexus.tsconfig.json api/schema",
    "generate:codegen": "graphql-codegen --config codegen.yml",
    "migrate:save": "prisma migrate save --experimental",
    "migrate:up": "prisma migrate up --experimental",
    "introspect": "prisma introspect",
    "analyze": "cross-env ANALYZE=true next build"
  },
  "keywords": [
    "React",
    "NextJS",
    "GraphQL",
    "Nexus",
    "Prisma"
  ],
  "author": "Puffy Tech",
  "license": "MIT",
  "dependencies": {
    "@apollo/client": "^3.2.2",
    "@material-ui/core": "^4.11.0",
    "@material-ui/icons": "^4.9.1",
    "@nexus/schema": "^0.16.0",
    "@prisma/client": "^2.8.0",
    "apollo-server-micro": "^2.18.2",
    "bcrypt": "^5.0.0",
    "clsx": "^1.1.1",
    "formik": "^2.1.7",
    "graphql": "^15.3.0",
    "graphql-iso-date": "^3.6.1",
    "graphql-middleware": "^4.0.2",
    "graphql-shield": "^7.3.6",
    "i18next": "^19.8.2",
    "jsonwebtoken": "^8.5.1",
    "jwt-decode": "3.0.0",
    "micro-cors": "^0.1.1",
    "next": "^9.5.3",
    "next-i18next": "^6.0.3",
    "nexus-plugin-prisma": "^0.20.0",
    "nookies": "^2.4.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-markdown": "^4.3.1",
    "validator": "^13.1.17",
    "winston": "^3.3.3",
    "yup": "^0.29.3"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^1.17.10",
    "@graphql-codegen/typescript": "^1.17.10",
    "@graphql-codegen/typescript-operations": "^1.17.8",
    "@next/bundle-analyzer": "^9.5.3",
    "@prisma/cli": "^2.8.0",
    "@types/micro-cors": "^0.1.1",
    "@types/react": "^16.9.51",
    "@types/yup": "^0.29.7",
    "@typescript-eslint/eslint-plugin": "^4.4.0",
    "@typescript-eslint/parser": "^4.4.0",
    "cross-env": "^7.0.2",
    "eslint": "^7.10.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.3",
    "eslint-plugin-react-hooks": "^4.1.2",
    "prettier": "^2.1.2",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3"
  },
  "optionalDependencies": {
    "husky": "^4.3.0",
    "pretty-quick": "3.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --pattern \"**/*.*(ts|tsx|graphql)\" --staged"
    }
  }
}
